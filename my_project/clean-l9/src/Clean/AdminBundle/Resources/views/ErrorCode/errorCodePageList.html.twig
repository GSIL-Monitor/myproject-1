{% include 'CleanAdminBundle:Common:meta.html.twig' %}
<title>错误码列表</title>
</head>
<body>
<nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> 首页 <span class="c-gray en">&gt;</span> 错误码 <span class="c-gray en">&gt;</span> 错误码列表 <a class="btn btn-success btn-refresh radius r" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新" ><i class="Hui-iconfont">&#xe68f;</i></a></nav>
<div class="page-container">
    <div class="text-l "> 
        <span class="select-box inline">      
            <select name="companyId" id="companyId" class="select">
                <option value="">所有</option>
                <option value="-1">通用</option>
                {% for company in companyInfo %}
                <option value="{{company.companyId}}">{{company.companyName|raw}}</option>
                {% endfor %}
            </select>
        </span>        
        <button type="submit" class="btn btn-success radius" id="search" name="search"><i class="Hui-iconfont">&#xe665;</i> 过滤</button>
        <span class="r">
            当前版本号：<input type="hidden" name="errorCodeVersionId" id="errorCodeVersionId" value="{{versionInfo.errorCodeVersionId}}" /><input type="text" class="input-text" style="width:100px" name="version" id="version" value="{{versionInfo.version}}" />
           <button type="button" class="btn btn-success radius" id="update" name="update"><i class="Hui-iconfont">&#xe692;</i> 更新版本号</button>
        </span>
    </div>
    <div class="cl pd-5 bg-1 bk-gray mt-20"> <span class="l"><a href="javascript:;" id="delAllList" class="btn btn-danger radius"><i class="Hui-iconfont">&#xe6e2;</i> 批量删除</a> <a href="javascript:;" onclick="pageFullShow('添加错误码','/admin/addErrorCode')" class="btn btn-primary radius"><i class="Hui-iconfont">&#xe600;</i> 添加错误码</a></span> <span class="r">共有数据：<strong id="listCount">0</strong> 条</span> </div>
    <table class="table table-border table-bordered table-bg" id="dataList">
        <thead>
            <tr>
                <th scope="col" colspan="9">错误码列表</th>
            </tr>
            <tr class="text-c">
                <th width="25"><input type="checkbox" name="checkAll" value=""></th>
                <th>错误码值</th>                 
                <th>错误类型</th>
                <th>错误语CN</th>                 
                <th>错误语EN</th>
                <th>韩语ko</th>
                <th>适用公司</th>
                <th>时间</th>
                <th width="100">操作</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
    <div id="page" class="mt-20"></div>
</div>
{% include 'CleanAdminBundle:Common:footer.html.twig' %}

<script type="text/javascript" src="/assets/lib/datatables/1.10.0/jquery.dataTables.min.js"></script> 
<script type="text/javascript" src="/assets/lib/laypage/1.2/laypage.js"></script>
<script type="text/javascript" src="/assets/js/errorCodePageList.min.js"></script>
</body>
</html>
