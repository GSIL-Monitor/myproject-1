{% include 'CleanAdminBundle:Common:meta.html.twig' %}
<title>消息列表</title>
</head>
<body>
<nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> 首页 <span class="c-gray en">&gt;</span> 消息管理 <span class="c-gray en">&gt;</span> 消息列表 <a class="btn btn-success btn-refresh radius r" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新" ><i class="Hui-iconfont">&#xe68f;</i></a></nav>
<div class="page-container">
    <div class="text-l"> 日期范围：
        <input type="text" onfocus="WdatePicker({ maxDate:'#F{$dp.$D(\'endDate\')||\'%y-%M-%d \'}',dateFmt:'yyyy-MM-dd HH:mm:ss' })" id="startDate" class="input-text Wdate" style="width:150px;">
        -
        <input type="text" onfocus="WdatePicker({ minDate:'#F{$dp.$D(\'startDate\')}',maxDate:'%y-%M-%d',dateFmt:'yyyy-MM-dd HH:mm:ss' })" id="endDate" class="input-text Wdate" style="width:150px;"> 
        {% if(isAdmin) %} 
        <span class="select-box inline">      
            <select name="companyId" id="companyId" class="select">
                <option value="">所有</option>
                {%if (isAdmin)%}<option value="-1">通用</option>{%endif%}
                {% for company in companyInfo %}
                <option value="{{company.companyId}}">{{company.companyName|raw}}</option>
                {% endfor %}
            </select>
        </span>
        {% endif %}
        <span class="select-box inline">      
            <select name="type" id="type" class="select" title="消息类型">
                <option value="1">系统 </option>
                <option value="2">个人 </option>                
            </select>
        </span>        
        <input type="text" class="input-text" style="width:250px" placeholder="输入用户名" id="keyWord" name="keyWord">
        <button type="submit" class="btn btn-success radius" id="seach" name="seach"><i class="Hui-iconfont">&#xe665;</i> 筛选消息</button>
    </div>
    <div class="cl pd-5 bg-1 bk-gray mt-20"> <span class="l"><a href="javascript:;" id="delAllList" class="btn btn-danger radius"><i class="Hui-iconfont">&#xe6e2;</i> 批量删除</a> <a href="javascript:;" onclick="pageFullShow('添加消息','/admin/addSystemMessage')" class="btn btn-primary radius"><i class="Hui-iconfont">&#xe600;</i> 添加消息</a></span> <span class="r">共有数据：<strong id="listCount">0</strong> 条</span> </div>
    <table class="table table-border table-bordered table-bg" id="dataList">
        <thead>
            <tr>
                <th scope="col" colspan="8">消息列表</th>
            </tr>
            <tr class="text-c">
                <th width="25"><input type="checkbox" name="checkAll" value=""></th>
                <th>公司/型号</th> 
                <th>消息类型</th>
                <th>标题</th>
                <th>消息内容</th>
                <th>推送用户</th>
                <th>时间</th>           
                <th width="100">操作</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
    <div id="page" class="mt-20"></div>
</div>

{% include 'CleanAdminBundle:Common:footer.html.twig' %}

<script type="text/javascript" src="/assets/lib/datatables/1.10.0/jquery.dataTables.min.js"></script> 
<script type="text/javascript" src="/assets/lib/laypage/1.2/laypage.js"></script>
<script type="text/javascript" src="/assets/lib/My97DatePicker/4.8/WdatePicker.js"></script> 
<script type="text/javascript" src="/assets/js/systemMessagePageList.min.js"></script>
</body>
</html>
