{% include 'CleanAdminBundle:Common:meta.html.twig' %}
<title>产品指南管理</title>
</head>
<body>
<nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> 首页 <span class="c-gray en">&gt;</span> 产品指南管理 <span class="c-gray en">&gt;</span> 添加 <a class="btn btn-success radius r" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新" ><i class="Hui-iconfont">&#xe68f;</i></a></nav>

<article class="page-container">
    <form class="form form-horizontal" id="formPro" action="/admin/addProductionSubmit" method="post">  
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2">公司/型号：</label>
            <div class="formControls col-xs-8 col-sm-9"> 
                <select name="companyId" id="companyId">
                    {% for company in companyInfo %}
                    <option value="{{company.companyId}}">{{company.companyName|raw}}</option>
                    {% endfor %}
                </select>
            </div>
        </div> 
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2">语言：</label>
            <div class="formControls col-xs-8 col-sm-9"> 
                <select name="lang" id="lang">
                    <option value="cn">简体中文</option>
                    <option value="en">ENGLISH</option>
                    <option value="ko">韩语</option>
                </select>
            </div>
        </div> 
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2">类型：</label>
            <div class="formControls col-xs-8 col-sm-9"> 
                <select name="type" id="type">
                    <option value="2">选项</option>
                    <option value="1">主页面</option>
                </select>
            </div>
        </div>  
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2">选项描述：</label>
            <div class="formControls col-xs-8 col-sm-9"> 
                <input type="text" class="input-text" value="" placeholder="" id="description" name="description">
            </div>
        </div> 
        {# <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2">其他语言描述选项：</label>
            <div class="formControls col-xs-8 col-sm-9"> 
                <input type="text" class="input-text" value="" placeholder="描述选项" id="enDescription" name="enDescription">
            </div>
        </div> #}  
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2">&nbsp;&nbsp;&nbsp;&nbsp;</label>
            <div class="formControls col-xs-8 col-sm-9"> 
                <script id="cnContent" type="text/plain" style="width:100%;height:400px;"></script> 
            </div>
        </div>
        {# <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2">其他语言：</label>
            <div class="formControls col-xs-8 col-sm-9"> 
                <script id="enContent" type="text/plain" style="width:100%;height:400px;"></script> 
            </div>
        </div> #}
        <div class="row cl">
            <div class="col-xs-8 col-sm-9 col-xs-offset-4 col-sm-offset-2">
                <button class="btn btn-primary radius" id="submit" type="submit"><i class="Hui-iconfont">&#xe632;</i> 保存</button>                
                <button id="reset" class="btn btn-default radius" type="button">&nbsp;&nbsp;取消&nbsp;&nbsp;</button>
            </div>
        </div>
    </form>
</article>

{% include 'CleanAdminBundle:Common:footer.html.twig' %}
