{% include 'CleanAdminBundle:Common:meta.html.twig' %}
<title>会员列表</title>
</head>
<body>
<nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> 首页 <span class="c-gray en">&gt;</span> 会员管理 <span class="c-gray en">&gt;</span> 会员列表 <a class="btn btn-success btn-refresh radius r" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新" ><i class="Hui-iconfont">&#xe68f;</i></a></nav>
<div class="page-container">
    <div class="text-l"> 日期范围：
        <input type="text" onfocus="WdatePicker({ maxDate:'#F{$dp.$D(\'endDate\')||\'%y-%M-%d \'}',dateFmt:'yyyy-MM-dd HH:mm:ss' })" id="startDate" class="input-text Wdate" style="width:160px;">
        -
        <input type="text" onfocus="WdatePicker({ minDate:'#F{$dp.$D(\'startDate\')}',maxDate:'%y-%M-%d',dateFmt:'yyyy-MM-dd HH:mm:ss' })" id="endDate" class="input-text Wdate" style="width:160px;"> 
        {% if(isAdmin) %} 
        <span class="select-box inline">      
            <select name="companyId" id="companyId" class="select">
                <option value="">所有</option>
                {%if (isAdmin)%}<option value="-1">通用</option>{%endif%}
                {% for company in companyInfo %}
                <option value="{{company.companyId}}">{{company.companyName|raw}}</option>
                {% endfor %}
            </select>
        </span>
        {% endif %}
        <input type="text" class="input-text" style="width:200px" placeholder="输入会员名称、电话、邮箱" id="keyWord" name="keyWord">
        <input type="text" class="input-text" style="width:200px" placeholder="输入APP版本" id="userAppVersion" name="userAppVersion">
        <input type="text" class="input-text" style="width:150px" placeholder="或输入SN" id="sn" name="sn">
        <button type="submit" class="btn btn-success radius" id="search" name="search"><i class="Hui-iconfont">&#xe665;</i> 搜用户</button>
    </div>
    <div class="cl pd-5 bg-1 bk-gray mt-20"> <span class="l"><a href="javascript:;" id="delAllList" class="btn btn-danger radius"><i class="Hui-iconfont">&#xe6e2;</i> 批量删除</a> <a href="javascript:;" onclick="pageFullShow('添加会员','/admin/addUser')" class="btn btn-primary radius"><i class="Hui-iconfont">&#xe600;</i> 添加会员</a></span> <span class="r">共有数据：<strong id="listCount">0</strong> 条</span> </div>
    <table class="table table-border table-bordered table-bg" id="dataList">
        <thead>
            <tr>
                <th scope="col" colspan="12">会员列表</th>
            </tr>
            <tr class="text-c">
                <th width="25"><input type="checkbox" name="checkAll" value=""></th>
                <th>公司/型号</th> 
                <th>头像</th>
                <th>用户名</th>
                <th>邮箱</th>
                <th>手机</th>
                <th>当前订阅机器</th>
                <th>app版本</th>
                <th>设备列表</th>
                <th>APP是否在线</th>
                <th>时间</th>           
                <th width="100">操作</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
    <div id="page" class="mt-20"></div>
</div>

{% include 'CleanAdminBundle:Common:footer.html.twig' %}

<script type="text/javascript" src="/assets/lib/datatables/1.10.0/jquery.dataTables.min.js"></script> 
<script type="text/javascript" src="/assets/lib/laypage/1.2/laypage.js"></script>
<script type="text/javascript" src="/assets/lib/My97DatePicker/4.8/WdatePicker.js"></script> 
<script type="text/javascript" src="/assets/js/userPageList.js"></script>
</body>
</html>
